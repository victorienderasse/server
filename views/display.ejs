</nav>


<%# -TITLE- %>
<div class="jumbotron">
    <div class="container">
        <h1>Display</h1>
        <p>Interface utilisateur</p>
    </div>
</div>


<%# -MESSAGE- %>
<div class="container" id="message">
    <div class="row">
        <div id="message-div">
            <strong id="message-title"></strong>
            <p id="message-body"></p>
        </div>
    </div>
</div>


<%# -TB SCREEN- %>
<div class="container" style="display:none">
    <div>
        <table id="table-camera" class="table table-striped">
            <thead>
                <tr>
                    <th>Live</th>
                    <th>Camera Name</th>
                    <th>Start Motion Detection</th>
                    <th>Replays</th>
                    <th>Manage Planification</th>
                </tr>
            </thead>
            <tbody id="tbody-camera">
            </tbody>
        </table>
    </div>
</div>


<div id="display"></div>


<hr>



<%# -MODAL TIMER- %>
<div id="modal-timer" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content modal-content-add">
            <div class="modal-header modal-header-added">
                <button type="button" class="close" data-dismiss="modal" onclick="emptyTimerForm();">&times;</button>
                <h3 id ="timer-title" style="text-align:center;" class="modal-header"></h3>
            </div>
            <div class="modal-body">

                <div class="container">
                    <div id="addRecord" class="row">
                        <h3>Ajouter une planification</h3>
                        <div class="col-lg-6">
                            <label for="begin"><b>Début</b></label>
                            <select id="frequency" name="frequency" class="form-control">
                                <option value="1">Monday</option>
                                <option value="2">Tuesday</option>
                                <option value="3">Wednesday</option>
                                <option value="4">Thursday</option>
                                <option value="5">Friday</option>
                                <option value="6">Saturday</option>
                                <option value="7">Sunday</option>
                                <option value="*">Every Day</option>
                            </select>
                        </div>
                        <div class="col-lg-6">
                            <label></label>
                            <input type="range" min="0" max="23" class="form-control">
                            :
                            <input type="range" min="0" max="55" step="5" class="form-control">
                        </div>
                    </div>
                    <div id="myRecord" class="row">

                    </div>
                </div>


                <p><h3>Ajouter une planification</h3></p>
                <form id="timer-form">
                    <section class="row form-group">
                        <div id="begin" class="col-lg-offset-2 col-lg-4">
                            <label for="begin" class="control-label">Heure début :</label>
                            <div class="form-group">
                                <select name="beginHour">
                                    <option value="0">00</option>
                                    <option value="1">01</option>
                                    <option value="2">02</option>
                                    <option value="3">03</option>
                                    <option value="4">04</option>
                                    <option value="5">05</option>
                                    <option value="6">06</option>
                                    <option value="7">07</option>
                                    <option value="8">08</option>
                                    <option value="9">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                    <option value="13">13</option>
                                    <option value="14">14</option>
                                    <option value="15">15</option>
                                    <option value="16">16</option>
                                    <option value="17">17</option>
                                    <option value="18">18</option>
                                    <option value="19">19</option>
                                    <option value="20">20</option>
                                    <option value="21">21</option>
                                    <option value="22">22</option>
                                    <option value="23">23</option>
                                </select>
                                :
                                <select name="beginMinute">
                                    <option value="0">00</option>
                                    <option value="5">05</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                    <option value="30">30</option>
                                    <option value="35">35</option>
                                    <option value="40">40</option>
                                    <option value="45">45</option>
                                    <option value="50">50</option>
                                    <option value="55">55</option>
                                </select>
                            </div>
                        </div>
                        <div id="end" class="col-lg-offset-2 col-lg-4">
                            <label for="end" class="control-label">Heure fin :</label>
                            <div class="form-group">
                                <select name="endHour">
                                    <option value="0">00</option>
                                    <option value="1">01</option>
                                    <option value="2">02</option>
                                    <option value="3">03</option>
                                    <option value="4">04</option>
                                    <option value="5">05</option>
                                    <option value="6">06</option>
                                    <option value="7">07</option>
                                    <option value="8">08</option>
                                    <option value="9">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                    <option value="13">13</option>
                                    <option value="14">14</option>
                                    <option value="15">15</option>
                                    <option value="16">16</option>
                                    <option value="17">17</option>
                                    <option value="18">18</option>
                                    <option value="19">19</option>
                                    <option value="20">20</option>
                                    <option value="21">21</option>
                                    <option value="22">22</option>
                                    <option value="23">23</option>
                                </select>
                                :
                                <select name="endMinute">
                                    <option value="0">00</option>
                                    <option value="5">05</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                    <option value="30">30</option>
                                    <option value="35">35</option>
                                    <option value="40">40</option>
                                    <option value="45">45</option>
                                    <option value="50">50</option>
                                    <option value="55">55</option>
                                </select>
                            </div>
                        </div>
                    </section>
                    <section class="row">
                        <div id="frequency" class="col-lg-offset-2 col-lg-3 form-group">
                            <label for="frequency" class="control-label">
                                Jour début :
                                <select id="frequency" name="frequency" class="form-control">
                                    <option value="1">Monday</option>
                                    <option value="2">Tuesday</option>
                                    <option value="3">Wednesday</option>
                                    <option value="4">Thursday</option>
                                    <option value="5">Friday</option>
                                    <option value="6">Saturday</option>
                                    <option value="7">Sunday</option>
                                    <option value="*">Every Day</option>
                                </select>
                            </label>
                        </div>
                        <div id="frequencyEnd" class="col-lg-offset-2 col-lg-3 form-group">
                            <label for="frequencyEnd" class="control-label">
                                Jour fin :
                                <select id="frequencyEnd" name="frequencyEnd" class="form-control">
                                    <option value="1">Monday</option>
                                    <option value="2">Tuesday</option>
                                    <option value="3">Wednesday</option>
                                    <option value="4">Thursday</option>
                                    <option value="5">Friday</option>
                                    <option value="6">Saturday</option>
                                    <option value="7">Sunday</option>
                                </select>
                            </label>
                        </div>
                    </section>
                    <section class="row">
                        <div class="form-group col-lg-offset-2">
                            <label for="timerDetection" class="control-label">Détection de mouvement : </label>
                            <input id="timerDetection" name="timerDetection" type="checkbox">
                        </div>
                        <div class="form-group col-lg-offset-2">
                            <label for="timerOnce" class="control-label"> Une seule fois : </label>
                            <input id="timerOnce" name="timerOnce" type="checkbox">
                        </div>
                    </section>
                </form>
                <div id="timer-records-div">
                    <hr>
                    <p>
                        <h3>Vos planifications</h3>
                        <button id="stopRecording" type="button" title="Click to stop the running record" style="display: none;" class="btn btn-warning">Stop</button>
                    </p>
                    <table id="timer-records-table" class="table table-hover table-striped table-responsive">
                        <thead>
                            <tr>
                                <th><b>Jour début</b></th>
                                <th><b>Heure début</b></th>
                                <th><b>Jour fin</b></th>
                                <th><b>Heure fin</b></th>
                                <th><b>Type</b></th>
                            </tr>
                        </thead>
                        <tbody id="timer-records-tbody"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button id="timer-confirm-btn" type="button" class="btn btn-success" data-dismiss="modal">Ajouter</button>
                <button id="timer-close-btn" type="button" class="btn btn-default" data-dismiss="modal" onclick="emptyTimerForm();">Fermer</button>
            </div>
        </div>
    </div>
</div>


<%# -MODAL REPLAYS- %>
<div id="modal-replay" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-content-add">
            <div class="modal-header modal-header-added">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 id ="replay-title" style="text-align:center;" class="modal-header"></h3>
            </div>
            <div id="modal-body-replay" class="" style="text-align:center;">
                <div id="table-replay-div" class="col-lg-5">
                    <div id="files-replay" class="form group"></div>
                </div>
                <div id="player-replay-div" class="col-lg-7"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>


<%# -MODAL LIVE- %>
<div id="modal-live" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-content-add">
            <div class="modal-header modal-header-added" id="modal-header-live">
                <button type="button" id="modal-live-x" class="close" data-dismiss="modal">&times;</button>
                <h3 id ="live-title" style="text-align:center;" class="modal-header"></h3>
                <div class="container">
                    <div class="row">
                        <div id="messageLive">
                            <strong id="messageLive-title"></strong>
                            <p id="messageLive-body"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div id="live-stream"></div>
            </div>
            <div class="modal-footer">
                <button type="button" id="modal-live-record" class="btn btn-danger">Enregistrer</button>
                <button type="button" id="modal-live-close" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>


<%# -MODAL CONFIG- %>
<div id="modal-config" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content modal-content-add">
            <div class="modal-header modal-header-added" id="modal-header-live">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 id ="config-title" style="text-align:center;" class="modal-header"></h3>
            </div>
            <div class="modal-body col-lg-offset-1 col-lg-10">
                <div class="form-group">
                    <label for="resolution" class="control-label">Resolution : <span id="resolutionValue"></span></label>
                    <input type="range" id="resolution" name="resolution" min="1" max="3">
                </div>
                <div class="form-group">
                    <label for="fps" class="control-label">Images par seconde : <span id="fpsValue"></span></label>
                    <input id="fps" name="fps" type="range" min="1" max="25" oninput="showFPS(this.value);">
                </div>
                <div class="form-group">
                    <label for="brightness" class="control-label">Luminosité : <span id="brightnessValue"></span></label>
                    <input type="range" id="brightness" name="brightness" min="0" max="100" step="5" oninput="showBrightness(this.value);">
                </div>
                <div class="form-group">
                    <label for="contrast" class="control-label">Contraste : <span id="contrastValue"></span></label>
                    <input type="range" id="contrast" name="contrast" min="0" step="5" max="100" oninput="showContrast(this.value);">
                </div>
                <div id="preview"></div>
            </div>
            <div class="modal-footer">
                <button type="button" id="modal-config-preview" class="btn btn-primary">Voir</button>
                <button type="button" id="modal-config-confirm" class="btn btn-success" data-dismiss="modal">Confirmer</button>
                <button type="button" id="modal-live-close" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<%# -SCRIPTS- %>
<script>
    var userID = '<%=userID%>';
</script>
<script src="/public/javascripts/hostconfig.js"></script>
<script src="/public/javascripts/socket.io.js"></script>
<script src="/public/javascripts/jquery.js"></script>
<script src="/public/javascripts/functions.js"></script>
<script src="/public/javascripts/display.js"></script>

</body>
</html>